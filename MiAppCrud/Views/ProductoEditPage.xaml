<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiAppCrud.Views.ProductoEditPage">
    <StackLayout Padding="10">
        <Label Text="Nombre del Producto"/>
        <Entry x:Name="NombreEntry"/>

        <Label Text="Precio"/>
        <Entry x:Name="PrecioEntry" Keyboard="Numeric"/>
        
        <StackLayout Orientation="Horizontal">
            <Button Text="Guardar" Clicked="OnSaveClicked"/>
            <Button Text="Actualizar" Clicked="OnSaveClicked"/>
            <Button Text="Borrar" Clicked="OnDeleteClicked"/>
        </StackLayout>
        
    </StackLayout>
</ContentPage>
