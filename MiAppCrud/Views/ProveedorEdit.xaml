<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiAppCrud.Views.ProveedorEditPage">

    <StackLayout Padding="10">
        <Label Text="Nombre del Proveedor"/>
        <Entry x:Name="NombreEntry"/>

        <Label Text="Telefono"/>
        <Entry x:Name="TelefonoEntry" Keyboard="Telephone"/>

        <StackLayout Orientation="Horizontal">
            <Button Text="Guardar" Clicked="OnSaveClicked"/>
            <Button Text="Actualizar" Clicked="OnSaveClicked"/>
            <Button Text="Borrar" Clicked="OnDeleteClicked"/>
        </StackLayout>

    </StackLayout>

</ContentPage>
